# Zeytin Ağacı Analiz Sistemi - Environment Variables
# Bu dosyayı .env olarak kopyalayın ve değerleri düzenleyin

# Uygulama Ayarları
APP_NAME="Zeytin Ağacı Analiz Sistemi"
APP_VERSION="1.0.0"
DEBUG=False

# Sunucu Ayarları
HOST=0.0.0.0
PORT=8000

# Veri Dizini
DATA_PATH=/app/data

# Veritabanı
DATABASE_URL=/app/data/analiz.db

# Dosya Limitleri
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,tif,tiff

# AI Model Ayarları
YOLO_MODEL_PATH=models/yolov8n.pt
CONFIDENCE_THRESHOLD=0.5

# Güvenlik
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Docker Ayarları
COMPOSE_PROJECT_NAME=zeytin-analiz

# Nginx Ayarları
NGINX_PORT_HTTP=80
NGINX_PORT_HTTPS=443

# SSL Ayarları
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Log Ayarları
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Redis (İsteğe bağlı - caching için)
# REDIS_URL=redis://localhost:6379/0

# Email Ayarları (İsteğe bağlı - bildirimler için)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-password
# EMAIL_FROM=your-email@gmail.com

# Monitoring (İsteğe bağlı)
# SENTRY_DSN=your-sentry-dsn-here

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# File Processing
TEMP_DIR=/tmp
CLEANUP_AFTER_DAYS=30

# GPU Support (CUDA kullanımı için)
# CUDA_VISIBLE_DEVICES=0